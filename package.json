{
	"name": "boksi-core",
	"version": "0.0.1",
	"description": "Core functionality for boksi",
	"main": "build/src/Boksi.js",
	"scripts": {
		"test": "nyc --reporter=html --reporter=text mocha -r ts-node/register test/**/*.spec.ts",
		"coverage": "nyc report --reporter=text-lcov | coveralls",
		"tsc": "tsc",
		"dev": "ts-node-dev ./src/Boksi.ts",
		"prod": "tsc && node ./build/src/Boksi.js"
	},
	"nyc": {
		"include": [
			"src/**/*.ts",
			"src/**/*.tsx"
		],
		"extension": [
			".ts",
			".tsx"
		],
		"require": [
			"ts-node/register"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"sourceMap": true,
		"instrument": true
	},
	"author": "Teemu Karppinen",
	"license": "MIT",
	"dependencies": {
		"node-ipc": "^9.1.1",
		"ts-node-dev": "^1.0.0-pre.39",
		"typescript": "^3.4.5"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/chai-as-promised": "^7.1.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.0.2",
		"@types/node-ipc": "^9.1.1",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"mocha": "^6.1.4",
		"nyc": "^14.1.1",
		"source-map-support": "^0.5.12",
		"ts-node": "^8.3.0",
		"tslint": "^5.16.0"
	}
}
